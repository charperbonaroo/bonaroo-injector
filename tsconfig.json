{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "lib": [
      "es2022"
    ],
    "target": "es2022",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "noUnusedLocals": true
  }
}
